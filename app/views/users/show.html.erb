<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h5><%= @user.name %></h5>
      <p><%= @user.email %></p>
      <h3>To-Do items</h3>
      <%= render @user.items %>
    </div>

    <div class="col-md-6">
      <h3>Create new To-Do item</h3>
      <%= form_for([@user, @user.items.build]) do |f| %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_area :name %>
      </p>
      <p>
        <%= f.submit "Add it" %>
      </p>
      <% end %>
    </div>
  </div>
</div>
